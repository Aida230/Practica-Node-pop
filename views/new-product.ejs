<%- include('header.ejs') %>

<div class="container">

  <h1>New Product</h1>

  <form method="POST" enctype="multipart/form-data">

    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name" required>
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Price</label>
      <input type="number" name="price" class="form-control" id="exampleInputPassword1" placeholder="Price" required>
    </div>

    <div class="mb-3">
      <label for="customFile" class="form-label">Avatar</label>
      <input type="file" name="avatar" class="form-control" id="imageUrl" placeholder="customFile">
    </div>

    <div class="mb-3">
      <label class="form-label">Tags</label>
      <div>
        <input type="checkbox" name="tags" value="work" id="work"> Work
      </div>
      <div>
        <input type="checkbox" name="tags" value="lifestyle" id="lifestyle"> Lifestyle
      </div>
      <div>
        <input type="checkbox" name="tags" value="motor" id="motor"> Motor
      </div>
      <div>
        <input type="checkbox" name="tags" value="mobile" id="mobile"> Mobile
      </div>
    </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>

<%- include('footer.ejs') %>